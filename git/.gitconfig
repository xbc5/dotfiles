[merge]
  tool = kdiff3
[mergetool "kdiff3"]
  trustExitCode = true

[gpg]
  program = gpg

[core]
  editor = nvim

[color]
  ui = auto

[diff]
  tool = kitty
[difftool]
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE

[user]
	name = xbc5
[init]
	defaultBranch = main
